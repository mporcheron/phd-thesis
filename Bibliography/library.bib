journal = {American Journal of Preventive Medicine},
month = {aug},
number = {2},
pages = {124--131},
publisher = {Elsevier},
title = {{Social Smoking: Implications for Public Health, Clinical Practice, and Intervention Research}},
volume = {37},
year = {2009}
}
