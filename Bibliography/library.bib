doi = {10.1080/08351813.2016.1199089},
file = {:Users/map/Library/Mobile Documents/com{\~{}}apple{\~{}}CloudDocs/Mendeley/Raclaw, Robles, DiDomenico - 2016 - Providing Epistemic Support for Assessments Through Mobile-Supported Sharing Activities.pdf:pdf},
isbn = {0835-1813},
